# Docker コンテナの設定
COMPOSE_PROJECT_NAME=claude-code-lab

# Node.js バージョン
NODE_VERSION=20

# 作業ディレクトリ（コンテナ内）
WORKSPACE_DIR=/workspace

# Z.AI (GLM) API Settings
# https://api.zai-kai.com から取得
ZAI_API_KEY=
ZAI_ANTHROPIC_BASE_URL=https://api.zai-kai.com/v1
ZAI_DEFAULT_HAIKU_MODEL=glm-4.7-flash
ZAI_DEFAULT_SONNET_MODEL=glm-4.7
ZAI_DEFAULT_OPUS_MODEL=glm-4.7

# API Timeout (ms)
API_TIMEOUT_MS=3000000
